<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="id.rent.android.model.Profile" />

        <variable
                name="profile"
                type="Profile" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Profile"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

        <TextView
                android:id="@+id/store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Store"
                android:textAppearance="@style/TextAppearance.SemiBold18"
                app:visibleGone="@{profile.stores.size != 0}" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Settings"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Invite friends"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Refer a seller"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Become a seller"
                android:textAppearance="@style/TextAppearance.SemiBold18"
                app:visibleGone="@{profile.stores.size == 0}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="List your product"
                android:textAppearance="@style/TextAppearance.SemiBold18"
                app:visibleGone="@{profile.stores.size == 0}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Get help"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Give us feedback"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

        <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Logout"
                android:textAppearance="@style/TextAppearance.SemiBold18" />

    </LinearLayout>

</layout>